{
    "name": "basic-network",
    "version": "1.0.0",
    "client": {
        "organization": "ecoMarket",
        "connection": {
            "timeout": {
                "peer": {
                    "endorser": "300"
                },
                "orderer": "300"
            }
        }
    },
    "channels": {
        "channel1": {
            "orderers": [
                "orderer0.example.com"
            ],
            "peers": {
                "peer0.ecoMarket.example.com": {}
            }
        }
    },
    "organizations": {
        "ecoMarket": {
            "mspid": "ecoMarketMSP",
            "peers": [
                "peer0.ecoMarket.example.com"
            ],
            "certificateAuthorities": [
                "ca.ecoMarket.example.com"
            ]
        }
    },
    "orderers": {
        "orderer0.example.com": {
            "url": "grpcs://localhost:7050",
            "grpcOptions": {
                "ssl-target-name-override": "orderer0.example.com"
            },
            "tlsCACerts": {
                "path": "../../network/crypto-config/ordererOrganizations/example.com/orderers/orderer0.example.com/msp/tlscacerts/tlsca.example.com-cert.pem"
            }
        }
    },

    "peers": {
        "peer0.ecoMarket.example.com": {
            "url": "grpcs://localhost:9051",
            "tlsCACerts": {
                "path": "../../network/crypto-config/peerOrganizations/ecoMarket.example.com/peers/peer0.ecoMarket.example.com/tls/ca.crt"

            },
            "grpcOptions": {
                "ssl-target-name-override": "peer0.ecoMarket.example.com",
                "hostnameOverride": "peer0.ecoMarket.example.com"
            }

        }
    },
    "certificateAuthorities": {
        "ca.ecoMarket.example.com": {
            "url": "https://localhost:9054",
            "caName": "ca.ecoMarket.example.com",
            "tlsCACerts":  "../../network/crypto-config/peerOrganizations/ecoMarket.example.com/tlsca/tlsca.ecoMarket.example.com-cert.pem",
            "httpOptions": {
                "verify": false
            }

        }
    }
}